<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carwash.carwash.activities.Home">

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="Welcome to Car WAS App"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="45dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="newClient"

                android:text="Register New Client"
                tools:layout_editor_absoluteX="38dp"
                tools:layout_editor_absoluteY="102dp" />
            </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="searchClient"
                android:text="Search Client"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="102dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="listAllRegisteredClients"
                android:text="List All clients"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="102dp" />
        </TableRow>
        <!--
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="listAllRegisteredClients"
                android:text="Search Transaction"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="102dp" />
        </TableRow> -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="gelAllCarWashRecords"
                android:text="View Transactions"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="102dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="getUpComingBirthdays"
                android:text="View Birth Days"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="102dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="emailReport"
                android:text="Email Report"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="102dp" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>
